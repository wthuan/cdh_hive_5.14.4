   public LocalCommand(Logger logger, OutputPolicy outputPolicy, String command) throws IOException {
     this.commandId = localCommandCounter.incrementAndGet();
     this.logger = logger;
-    logger.info("Starting LocalCommandId={}: {}" + commandId, command);
